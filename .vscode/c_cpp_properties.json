{
  "configurations": [
    {
      "name": "Mac",
      "includePath": ["${workspaceFolder}/**"],
      "defines": [],
      "macFrameworkPath": ["/System/Library/Frameworks", "/Library/Frameworks"],
      "compilerPath": "/usr/local/opt/llvm/bin/clang++",
      "cStandard": "c11",
      "cppStandard": "c++14",
      "compilerArgs": [
        "-pedantic-errors",
        "-fsanitize=undefined",
        "-Wno-deprecated",
        "-Wno-unneeded-internal-declaration"
      ],
      "browse": {
        "limitSymbolsToIncludedHeaders": true
      }
    }
  ],
  "version": 4
}
